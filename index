<body>
    <div class="calculator">
        <div class="title">Kalkulator</div>
        <input type="text" id="screen" disabled value="0">
        <table>
            <tr>
                <td><button class="btn operator" onclick="addToScreen('+')">+</button></td>
                <td><button class="btn operator" onclick="addToScreen('-')">-</button></td>
                <td><button class="btn operator" onclick="addToScreen('*')">ร</button></td>
                <td><button class="btn operator" onclick="addToScreen('/')">รท</button></td>
            </tr>
            <tr>
                <td><button class="btn" onclick="addToScreen('7')">7</button></td>
                <td><button class="btn" onclick="addToScreen('8')">8</button></td>
                <td><button class="btn" onclick="addToScreen('9')">9</button></td>
                <td rowspan="4"><button class="btn equal" onclick="calculateResult()">=</button></td>
            </tr>
            <tr>
                <td><button class="btn" onclick="addToScreen('4')">4</button></td>
                <td><button class="btn" onclick="addToScreen('5')">5</button></td>
                <td><button class="btn" onclick="addToScreen('6')">6</button></td>
            </tr>
            <tr>
                <td><button class="btn" onclick="addToScreen('1')">1</button></td>
                <td><button class="btn" onclick="addToScreen('2')">2</button></td>
                <td><button class="btn" onclick="addToScreen('3')">3</button></td>
            </tr>
            <tr>
                <td><button class="btn" onclick="addToScreen('.')">.</button></td>
                <td><button class="btn" onclick="addToScreen('0')">0</button></td>
                <td><button class="btn clear" onclick="clearScreen()">C</button></td>
            </tr>
        </table>
    </div>

    <script>
        function addToScreen(character) {
            let screen = document.getElementById("screen");
            if (screen.value === "0") {
                screen.value = character;
            } else {
                screen.value += character;
            }
        }

        function clearScreen() {
            document.getElementById("screen").value = "0";
        }

        function calculateResult() {
            try {
                document.getElementById("screen").value = eval(document.getElementById("screen").value);
            } catch (error) {
                alert("Invalid input!");
            }
        }
    </script>
